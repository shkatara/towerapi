---

- name: run the playbook
  hosts: localhost
  gather_facts: false
  tasks:
    - name: set empty list for job ids
      set_fact: 
        job_id: []

    - name: set empty list for job ids
      set_fact: 
        inventory_id: []
    
    - name: Queue Jobs in ansible tower
      uri:
        url: https://ansible-ctrl.0e25.dynamic.opentlc.com/api/v2/jobs/
        user: admin
        password: redhat
        method: GET
        validate_certs: false
        force_basic_auth: yes
        status_code: 200
        return_content: true
      register: towerapi
      
    - name: create the job id list
      set_fact:
        job_id : "{{ job_id + [item.id]  }}"
      loop: "{{towerapi.json.results}}"

    - name: create the inventory id list
      set_fact:
        inventory_id : "{{ inventory_id + [item.summary_fields.inventory.id]  }}"
      loop: "{{towerapi.json.results}}"

    - name: create unique list
      set_fact:
        inventory: "{{inventory_id | unique}}"
 
    - name: get the host information reading the inventory
      uri:
        url: https://ansible-ctrl.0e25.dynamic.opentlc.com/api/v2/inventories/{{item}}/hosts
        user: admin
        password: redhat
        method: GET
        validate_certs: false
        force_basic_auth: yes
        status_code: 200
        return_content: true
      loop: "{{inventory}}"
      register: inv_data

    - name: print inv_data
      template: 
        src: template.j2
        dest: /tmp/tower

